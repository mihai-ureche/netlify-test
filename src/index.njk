    <main>
      <p class="margin-left">This is the simplest starting template using Nunjucks.</p>

      {# Example: iterate a small list if provided #}
      {% if items %}
        <h2>Items</h2>
        <ul>
          {% for it in items %}
            <li>{{ it }}</li>
          {% endfor %}
        </ul>
      {% else %}
        <p class="muted">No items to show â€” pass an <code>items</code> array to render a list.</p>
      {% endif %}
    </main>

    <footer style="margin-top:2rem; font-size:0.9rem; color:#999;">
      <p>Generated with a minimal Nunjucks template.</p>
    </footer>
  </body>
